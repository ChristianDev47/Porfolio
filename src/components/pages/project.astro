---
import Video from "@/components/Video.astro";
import "@fontsource-variable/inter"
import ProjectLinks from "@/components/ProjectLinks.astro";
import GitHub from "@/icons/GitHub.astro";
import Link from "@/icons/Link.astro";
import BackColor from "@/components/BackColor.astro";
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

interface Props {
  project: {title: string, subtitle: string, github: string, link: string, description: string, video:string}
}

const { project } = Astro.props

const { title, subtitle, github, link,  description, video } = project;
---
  <article class="flex flex-col justify-center items-center w-full mt-28 mb-5 animate-fade-down animate-duration-[3000ms] px-8">
    <div class="flex flex-col justify-center items-center relative max-w-6xl w-full space-y-10">
      <h1 class="titleProject text-4xl font-bold max-w-xl text-center md:text-3xl z-20">{title} - <span class="text-[#20b556] dark:text-[#4ade80]">{subtitle}</span></h1>
      <p class="dark:text-gray-300 text-[#292929] text-md md:text-[16px] text-center max-w-5xl w-full z-20">{description}</p>
      <BackColor/>
      <Video video={video}/>
      <div  class="flex gap-5">
        <ProjectLinks href={github}>
        <span class="flex gap-4" > <GitHub class="size-6" />{i18n.PROJECTS.BTN_CODE}</span>
        </ProjectLinks>
        <ProjectLinks href={link}>
        <span class="flex gap-4" > <Link class="size-6" />  {i18n.PROJECTS.BTN_PREVIEW}</span>
        </ProjectLinks>
      </div>
    </div>
  </article>


<style >
  .titleProject {
    font-family: 'Inter Variable', sans-serif;
    font-weight: 900;
  }
</style>
