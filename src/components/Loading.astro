---
import { AnimatePresence, motion } from 'framer-motion';

---

<AnimatePresence>
  <motion.div
      initial={{ opacity: 1 }}
      animate={{
        opacity: 0,
        transition: { delay: 1, duration: 0.4, ease: "easeInOut" },
    }}
    class="h-screen w-screen fixed bg-[#14181c]  top-0 pointer-events-none"
    />
    <slot/>
</AnimatePresence>
